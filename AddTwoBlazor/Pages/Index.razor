@page "/"
@using AddTwoShared

<h1>数値入力</h1>

<div class="input-group">
    <input type="number" @bind="inputValue" class="form-control" />
    <button class="btn btn-primary" @onclick="Calc">計算</button>
</div>

<p class="mt-3">結果: @result</p>

@code {
    private int inputValue;
    private int result;

    private void Calc()
    {
        result = MathService.AddTwo(inputValue);
    }
}
